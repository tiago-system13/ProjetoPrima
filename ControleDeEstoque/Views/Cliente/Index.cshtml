@model aplicacao.ViewModel.Filtro.ClienteViewModelFiltro
@{
    Layout = "~/Views/Shared/_LayoutPesquisa.cshtml";
    ViewBag.Pesquisa = "Pesquisa de Cliente";
    ViewBag.Titulo = "Prova II Técnica";
    var tiposDePesquisas = new SelectListItem[] { new SelectListItem { Text = "Selecione...", Value = "" }, new SelectListItem { Text = "CPF", Value = "1" }, new SelectListItem { Text = "Nome", Value = "2" } };   

}

@section JsAdicional {

    @Scripts.Render("~/Views/Cliente/index.js")
}
@section Pesquisa{
    <div class="row">
        <div class="col-xs-12 col-md-4 col-sm-12">
            <div class="form-group">
                <button type="button" class="btn btn-info" style="margin-top:4%" id="btnNovoCliente"><i class="fa fa-file-o" aria-hidden="true"></i> Novo</button>
                @Html.Hidden("RedirectTo", Url.Action("NovoCliente", "Cliente"), new { id = "RedirectToNovoCliente" })
            </div>
        </div>
    </div>
    <div class="row">
       
        <div class="col-xs-12 col-md-4 col-sm-12">
            <div class="form-group">
                @Html.Label("Pesquisar Por:")
                @Html.DropDownList("TipoDePesquisa", tiposDePesquisas, new { @class = "form-control", @id = "tipodePesquisa", style = "overflow:scroll" })
            </div>
        </div>
        <div class="col-xs-12 col-md-4 col-sm-12" id="div_valorDocumento">
            <div class="form-group">
                @Html.Label("Valor da Pesquisar:")
                @Html.TextBoxFor(m => m.Cpf, new { @class = "form-control", @id = "documento" })
            </div>
        </div>
        <div class="col-xs-12 col-md-4 col-sm-12" id="div_valorNome">
            <div class="form-group">
                @Html.Label("Valor da Pesquisar:")
                @Html.TextBoxFor(m => m.Nome, new { @class = "form-control", @id = "nome" })
            </div>
        </div>
    </div>
    <div class="row" style="margin-top:3%">
        <div class="col-xs-12 col-md-12 col-sm-12">

            <div id="mensagemSucessoExclusao"> </div>

            <table class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0" width="100%" id="datatable-clientes">
                <thead>
                    <tr>
                        <th class="text-center">Código</th>
                        <th class="text-center">Documento</th>
                        <th class="text-center">Nome</th>
                        <th class="text-center">Data de Nascimento</th>
                        <th class="text-center">Telefone</th>
                        <th class="text-center">E-mail</th>                        
                        <th class="text-center">Ações</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
    <script type="text/javascript" language="javascript">
        window.addEventListener('resize', function (event) {
            location.reload();
        });
    </script>
    <div class="container">
        <div class="row">

            <!-- Modal -->
            <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
                            <h4 class="modal-title" id="myModalLabel">Exclusão</h4>
                        </div>
                        <div class="modal-body">
                            <label>Deseja excluir o item?</label>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-default" data-dismiss="modal">Não</button>
                            <button type="button" class="btn btn-primary" data-dismiss="modal" id="confirme">Sim</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

}
